<div class="container text-center">
  <p id="notice"><%= notice %></p>

  <h1>Photos</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Album</th>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td><%= photo.album_id %></td>
          <td><%= photo.title %></td>
          <td><%= photo.description %></td>
          <td><%= link_to 'Show', photo, class:"btn btn-custom" %></td>
          <td><%= link_to 'Edit', edit_photo_path(photo), class:"btn btn-custom" %></td>
          <td><%= link_to 'Destroy', photo, class:"btn btn-custom", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Photo', new_photo_path, class:"btn btn-custom" %>
</div>
