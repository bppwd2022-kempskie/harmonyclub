<div class="container text-center">
  <p id="notice"><%= notice %></p>

  <h1>Albums</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.title %></td>
          <td><%= album.description %></td>
          <td><%= link_to 'Show', album, class:"btn btn-custom" %></td>
          <td><%= link_to 'Edit', edit_album_path(album), class:"btn btn-custom" %></td>
          <td><%= link_to 'Destroy', album, class:"btn btn-custom", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Album', new_album_path, class:"btn btn-custom" %>
</div>
