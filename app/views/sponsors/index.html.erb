<div class="container text-center">
  <p id="notice"><%= notice %></p>

  <h1>Sponsors</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Website</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sponsors.each do |sponsor| %>
        <tr>
          <td><%= sponsor.title %></td>
          <td><%= sponsor.website %></td>
          <td><%= link_to 'Show', sponsor, class:"btn btn-custom" %></td>
          <td><%= link_to 'Edit', edit_sponsor_path(sponsor), class:"btn btn-custom" %></td>
          <td><%= link_to 'Destroy', sponsor, class:"btn btn-custom", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Sponsor', new_sponsor_path, class:"btn btn-custom" %>
</div>
