  <div class="field">
    <%= form.label :title, class:"form-label" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :visible, class:"form-check-label" %>
    <%= form.check_box :visible, class:"form-check-input" %>
  </div>
