  <div class="field">
    <%= form.label :position, class:"form-label" %>
    <%= form.number_field :position, class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "Submit", class:"btn btn-custom" %>
  </div>
<% end %>
