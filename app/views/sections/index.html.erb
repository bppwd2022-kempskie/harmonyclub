<div class="container text-center">
  <p id="notice"><%= notice %></p>

  <h1>Sections</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Location</th>
        <th>Title</th>
        <th>Visible</th>
        <th>Position</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sections.each do |section| %>
        <tr>
          <td><%= section.location %></td>
          <td><%= section.title %></td>
          <td><%= section.visible %></td>
          <td><%= section.position %></td>
          <td><%= link_to 'Show', section, class:"btn btn-custom" %></td>
          <td><%= link_to 'Edit', edit_section_path(section), class:"btn btn-custom" %></td>
          <td><%= link_to 'Destroy', section, class:"btn btn-custom", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Section', new_section_path, class:"btn btn-custom" %>
</div>
